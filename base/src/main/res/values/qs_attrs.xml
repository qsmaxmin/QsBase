<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- viewpager -->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="psts_TextSize" format="dimension" />
        <attr name="psts_SelectedTextSize" format="dimension" />
        <attr name="psts_IndicatorColor" format="color" />
        <attr name="psts_IndicatorWidth" format="dimension" />
        <attr name="psts_IndicatorHeight" format="dimension" />
        <attr name="psts_IndicatorCorner" format="dimension" />
        <attr name="psts_IndicatorDrawable" format="reference" />
        <attr name="psts_IndicatorStyle" format="enum">
            <enum name="underText" value="0" />
            <enum name="behindText" value="1" />
        </attr>
        <attr name="psts_UnderlineColor" format="color" />
        <attr name="psts_DividerColor" format="color" />
        <attr name="psts_DividerWidth" format="dimension" />
        <attr name="psts_SelectedTextColor" format="color" />
        <attr name="psts_UnSelectedTextColor" format="color" />
        <attr name="psts_UnderlineHeight" format="dimension" />
        <attr name="psts_DividerPadding" format="dimension" />
        <attr name="psts_TabPaddingLeftRight" format="dimension" />
        <attr name="psts_ScrollOffset" format="dimension" />
        <attr name="psts_ShouldExpand" format="boolean" />
        <attr name="psts_TextAllCaps" format="boolean" />
        <attr name="psts_TextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="psts_SelectedTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>

    </declare-styleable>

    <!--PtrFrameLayout-->
    <declare-styleable name="PtrFrameLayout">
        <attr name="ptr_header" format="reference" />
        <attr name="ptr_content" format="reference" />
        <attr name="ptr_resistance" format="float" />
        <attr name="ptr_ratio_of_header_height_to_refresh" format="float" />
        <attr name="ptr_duration_to_close" format="integer" />
        <attr name="ptr_duration_to_close_header" format="integer" />
        <attr name="ptr_pull_to_fresh" format="boolean" />
        <attr name="ptr_keep_header_when_refresh" format="boolean" />
    </declare-styleable>

    <!--CirclePageIndicator-->
    <declare-styleable name="CirclePageIndicator">
        <attr name="cpi_Centered" format="boolean" />
        <attr name="cpi_SelectedColor" format="color" />
        <attr name="cpi_UnSelectedColor" format="color" />
        <attr name="cpi_SelectedDrawable" format="reference" />
        <attr name="cpi_StrokeWidth" format="dimension" />
        <attr name="cpi_Radius" format="dimension" />
        <attr name="cpi_ItemMarginRatio" format="float" />
        <attr name="cpi_SelectedWidthRatio" format="float" />
        <attr name="cpi_Transform_mode">
            <enum name="normal" value="1" />
            <enum name="translate" value="2" />
            <enum name="scale" value="3" />
        </attr>
        <attr name="cpi_IsSnap" format="boolean" />
        <attr name="cpi_OutsideColor" format="color" />
        <attr name="cpi_OutsideSize" format="dimension" />
        <attr name="android:orientation" />
        <attr name="android:background" />
    </declare-styleable>

    <!--百分比布局自定义属性-->
    <declare-styleable name="PercentLayout">
        <attr name="percentDimensionRatio" format="string" />
    </declare-styleable>
    <declare-styleable name="PercentLayout_Layout">
        <attr name="layout_widthPercent" format="string" />
        <attr name="layout_heightPercent" format="string" />
        <attr name="layout_percentDimensionRatio" format="string" />
    </declare-styleable>

    <declare-styleable name="HeaderScrollView">
        <attr name="hsv_tabOffsetY" format="dimension" />
    </declare-styleable>


    <declare-styleable name="RelativeTextView">
        <!--如：“2,0.9,3,0.8” 表示前2个字缩放0.9倍，往右3个字缩放0.8倍，颜色定义规则也是一样-->
        <attr name="rtv_orderScale" format="string" />
        <attr name="rtv_orderColor" format="string" />

        <!--如：“2,0.9,3,0.8” 表示后2个字缩放0.9倍，往左3个字缩放0.8倍，颜色定义规则也是一样-->
        <attr name="rtv_invertedOrderScale" format="string" />
        <attr name="rtv_invertedOrderColor" format="string" />

        <!--指定字符之后的所有字符缩放比例，如“好,0.8”表示“好”字之后的字符缩放0.8倍，颜色定义规则也是一样-->
        <attr name="rtv_rightOfTextScale" format="string" />
        <attr name="rtv_rightOfTextColor" format="string" />
        <attr name="rtv_leftOfTextScale" format="string" />
        <attr name="rtv_leftOfTextColor" format="string" />

        <!--指定字符的缩放比例，如“好,0.8”表示“好”字缩放0.8倍，颜色定义规则也是一样-->
        <attr name="rtv_specifiedTextScale" format="string" />
        <attr name="rtv_specifiedTextColor" format="string" />
        <attr name="rtv_gravity" format="enum">
            <enum name="baseLine" value="0" />
            <enum name="top" value="1" />
            <enum name="center" value="2" />
            <enum name="bottom" value="3" />
        </attr>

        <!--开始和结束字符位置绘制指定图形-->
        <attr name="rtv_drawableFirst" format="reference" />
        <attr name="rtv_drawableEnd" format="reference" />
        <attr name="rtv_drawableFirstMargin" format="dimension" />
        <attr name="rtv_drawableEndMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FunctionImageView">
        <attr name="fiv_enableTouchScaleDown" format="boolean" />
        <attr name="fiv_function" format="enum">
            <enum name="preview" value="0" />
            <enum name="crop" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="QsSeekBar">
        <attr name="qsb_backgroundDrawable" format="reference|color" />
        <attr name="qsb_progressDrawable" format="reference|color" />
        <attr name="qsb_thumbDrawable" format="reference|color" />
        <!--原点drawable-->
        <attr name="qsb_originDrawable" format="reference|color" />
        <attr name="qsb_progressThickness" format="dimension" />
        <attr name="qsb_max" format="float" />
        <attr name="qsb_min" format="float" />
        <attr name="qsb_progress" format="float" />
        <!--原点位置（min <= origin => max）-->
        <attr name="qsb_origin" format="float" />
        <attr name="qsb_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
</resources>